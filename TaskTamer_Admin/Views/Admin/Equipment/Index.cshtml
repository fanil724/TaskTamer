@using TaskTamer_Application.Contracts
@model IEnumerable<EquipmentDTO>
@{
    ViewData["Title"] = "Страница оборудования";
}



<div class="row">
    <div class="row" style="overflow: visible;">
        <!-- Боковая панель -->
        <div class="col-md-2  sidebar" style="position: sticky; top: 35px; height: fit-content;">
            <partial name="NavPanel" />
        </div>
        <div class="col-md-10 main-content">
            <div class="container mt-4">
                <div class="d-flex justify-content-between align-items-center mb-4">                    
                    <h1 class="page-title">
                        <i class="fas fa-cogs mr-2"></i>Список оборудования
                    </h1>
                    <a href="@Url.Action("Create", "Equipment")" class="btn btn-success btn-lg">
                        <i class="fas fa-plus-circle mr-2"></i> Новое обрудование
                    </a>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-@TempData["messageType"] alert-dismissible fade show mt-3" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>

            <!-- Фильтры -->
            <div class="card mb-4" >
                <div class="card-header bg-light" >
                    <h5 class="mb-0">Фильтры</h5>
                </div>
                <div class="card-body" >
                    <form method="get" asp-action="Index" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Ответственные</label>
                            <select name="employeeID" class="form-select" asp-items="ViewBag.ResponsibleEmployees">
                                <option value="">Все ответственные</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Отдел</label>
                            <select name="departmentId" class="form-select" asp-items="ViewBag.departments">
                                <option value="">Все отделы</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Местоположение</label>
                            <input type="text" name="location" class="form-control" placeholder="Местоположение...">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Поиск</label>
                            <div class="input-group">
                                <input type="text" name="search" class="form-control" placeholder="Поиск...">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Таблица оборудования -->
                <div class="card" style="width: 120%;">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Оборудование</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.Any())
                        {
                            <div class="alert alert-info text-center">
                                <i class="fas fa-info-circle"></i> Оборудование не найдено
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table">
                                        <tr>
                                            <th>ID</th>
                                            <th>Название</th>
                                            <th>Модель</th>
                                            <th>Серийный номер</th>
                                            <th>Тип</th>
                                            <th>Ответственный</th>
                                            <th>Отдел</th>
                                            <th>Местоположение</th>
                                            <th>Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderBy(e => e.Name))
                                        {
                                            <tr>
                                                <td>
                                                    <strong>#@item.EquipmentID</strong>
                                                </td>
                                                <td>@item.Name</td>
                                                <td>@item.Model</td>
                                                <td>
                                                    <code>@item.SerialNumber</code>
                                                </td>
                                                <td>
                                                    <span class="badge @GetTypeBadgeClass(item.Type)">
                                                        @item.Type
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (item.ResponsibleEmployee != null)
                                                    {
                                                        <span>@item.ResponsibleEmployee.FullName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Не назначен</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.departmentDTO != null)
                                                    {
                                                        <span>@item.departmentDTO.Name</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Не указан</span>
                                                    }
                                                </td>
                                                <td>@item.Location</td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a asp-action="Details" asp-route-id="@item.EquipmentID"
                                                           class="btn btn-info" title="Просмотр">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-route-id="@item.EquipmentID"
                                                           class="btn btn-warning" title="Редактировать">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@functions {
    private string GetTypeBadgeClass(string type)
    {
        return type switch
        {
            "Компьютер" => "bg-primary",
            "Принтер" => "bg-success",
            "Сервер" => "bg-warning",
            "Сетевое" => "bg-info",
            "Офисное" => "bg-secondary",
            _ => "bg-dark"
        };
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Подсказки
            $('[title]').tooltip();
        });
    </script>
}
