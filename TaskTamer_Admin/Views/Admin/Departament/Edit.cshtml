@using TaskTamer_Application.Contracts
@model DepartmentDTO

<h2>Редактирование отдела</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DepartmentID" />
    <input type="hidden" asp-for="CreationDate" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название отдела *</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentType" class="control-label">Тип отдела</label>
        <select asp-for="DepartmentType" class="form-control">            
            <option value="Administrative">Administrative</option>
            <option value="Production">Production</option>
            <option value="Service">Service</option>
           
        </select>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Активный отдел</label>
    </div>

    <div class="form-group">
        <label class="control-label">Дата создания</label>
        <p class="form-control-plaintext">@Model.CreationDate.ToString("dd.MM.yyyy HH:mm")</p>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>