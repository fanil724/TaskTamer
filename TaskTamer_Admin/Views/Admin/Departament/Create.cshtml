@using TaskTamer_Application.Contracts
@model DepartmentDTO



<h2>Создание отдела</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название отдела *</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentType" class="control-label">Тип отдела</label>
        <select asp-for="DepartmentType" class="form-control">
            <option value="Production">Производственный</option>
            <option value="IT">IT</option>
            <option value="HR">HR</option>
            <option value="Finance">Финансовый</option>
            <option value="Sales">Продажи</option>
        </select>
        <span asp-validation-for="DepartmentType" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Активный отдел</label>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>