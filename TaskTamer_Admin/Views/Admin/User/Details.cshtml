@using TaskTamer_Application.Contracts
@model UserDTO

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Информация о пользователе</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">ID пользователя</label>
                    <input type="text" class="form-control" value="@Model.UserID" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Логин</label>
                    <input type="text" class="form-control" value="@Model.Username" readonly>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Дата регистрации</label>
                    <input type="text" class="form-control" value="@Model.RegistrationDate.ToString("dd.MM.yyyy")" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Статус</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas @(Model.IsActive ? "fa-check-circle text-success" : "fa-times-circle text-danger")"></i>
                        </span>
                        <input type="text" class="form-control" value="@(Model.IsActive ? "Активен" : "Неактивен")" readonly>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Информация о сотруднике</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">ФИО</label>
                            <input type="text" class="form-control" value="@Model.employeeDTO?.FullName" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            <input type="text" class="form-control" value="@Model.employeeDTO?.Email" readonly>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Должность</label>
                            <select class="form-select" disabled>
                                <option selected>@Model.employeeDTO?.positionDTO?.Title</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Отдел</label>
                            <select class="form-select" disabled>
                                <option selected>@Model.employeeDTO?.departmentDTO?.Name</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Роль пользователя</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Роль</label>
                            <input type="text" class="form-control" value="@Model.roleDTO?.Name" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Уровень доступа</label>
                            <input type="text" class="form-control" value="@Model.roleDTO?.AccessLevel" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 mb-5">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>


    <style>
        .card {
            border-radius: 10px;
        }
        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }
        .form-control:read-only, .form-select:disabled {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }
        .input-group-text {
            background-color: #e9ecef;
        }
    </style>
