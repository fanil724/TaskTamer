@using TaskTamer_Application.Contracts
@model UserDTO

<div class="container mt-4">
    <div class="card shadow">
        <form asp-action="Create" asp-controller="User" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Скрытое поле для UserID -->
            <input type="hidden" asp-for="UserID" />

            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Информация о пользователе</h4>
            </div>

            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">ID пользователя</label>
                        <input asp-for="UserID" type="text" class="form-control" readonly>
                        <span asp-validation-for="UserID" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Логин</label>
                        <input asp-for="Username" type="text" class="form-control">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Пароль</label>
                        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="пароль обезателен">
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Статус</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas @(Model.IsActive ? "fa-check-circle text-success" : "fa-times-circle text-danger")"></i>
                            </span>
                            <select asp-for="IsActive" class="form-select">
                                <option value="true">Активен</option>
                                <option value="false">Неактивен</option>
                            </select>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Дата регистрации</label>
                        <input asp-for="RegistrationDate" type="text" class="form-control" value="@Model.RegistrationDate.ToString("dd.MM.yyyy")" readonly>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Информация о сотруднике</h5>
                    </div>
                    <div class="card-body">
                        <!-- Скрытые поля для EmployeeID -->
                        <input type="hidden" asp-for="employeeDTO.EmployeeID" value="0" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">ФИО</label>
                                <input asp-for="employeeDTO.FullName" type="text" class="form-control">
                                <span asp-validation-for="employeeDTO.FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Email</label>
                                <input asp-for="employeeDTO.Email" type="text" class="form-control">
                                <span asp-validation-for="employeeDTO.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Телефон</label>
                                <input asp-for="employeeDTO.Phone" type="text" class="form-control">
                                <span asp-validation-for="employeeDTO.Phone" class="text-danger"></span>
                            </div>
                            @*<div class="col-md-6">
                                <label class="form-label fw-bold">Тип работника</label>
                                <input asp-for="employeeDTO.UserType" type="text" class="form-control">
                                <span asp-validation-for="employeeDTO.UserType" class="text-danger"></span>
                            </div>*@
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Тип работника</label>
                                <select asp-for="employeeDTO.UserType" class="form-select">
                                    <option value="HeadDepartment">HeadDepartment</option>
                                    <option value="Manager">Manager</option>
                                    <option value="Employee">Employee</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Должность</label>
                                <select asp-for="employeeDTO.positionDTO.PositionID" class="form-select" asp-items="@ViewBag.Position">
                                    <option value="">-- Выберите должность --</option>
                                </select>
                                <span asp-validation-for="employeeDTO.positionDTO.PositionID" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Отдел</label>
                                <select asp-for="employeeDTO.departmentDTO.DepartmentID" class="form-select" asp-items="@ViewBag.Depart">
                                    <option value="">-- Выберите отдел --</option>
                                </select>
                                <span asp-validation-for="employeeDTO.departmentDTO.DepartmentID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Роль пользователя</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold">Роль</label>
                                        <select asp-for="roleDTO.RoleID" class="form-select" asp-items="@ViewBag.Roles">
                                            <option value="">-- Выберите роль --</option>
                                        </select>
                                        <span asp-validation-for="roleDTO.RoleID" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 d-flex align-items-center justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary w-25">Сохранить</button>
                        <a asp-action="Index" asp-controller="User" class="btn btn-outline-secondary w-25">Отмена</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>


<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .form-control:read-only, .form-select:disabled {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    .input-group-text {
        background-color: #e9ecef;
    }
</style>
